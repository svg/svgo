{
  "env": {
    "node": true,
    "es2021": true
  },
  "extends": ["eslint:recommended"],
  "parserOptions": {
    "ecmaVersion": 2021
  },
  "overrides": [
    {
      "files": ["rollup.config.js", "**/*.mjs"],
      "parserOptions": {
        "sourceType": "module"
      }
    },
    {
      "files": ["**/*.cjs"],
      "parserOptions": {
        "sourceType": "commonjs"
      }
    },
    {
      "files": ["**/*.test.js"],
      "env": {
        "jest": true
      }
    }
  ]
}
