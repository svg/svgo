{
  "compilerOptions": {
    "noEmit": true,
    "module": "commonjs",
    "target": "es2018",
    "lib": ["es2018"],
    "allowJs": true,
    "checkJs": true,
    "strict": true,
    "resolveJsonModule": true
  },
  "include": [
    "lib/**/*.js",
    "plugins/**/*",
    "test/cli/**/*"
  ],
  "exclude": [
    "lib/svgo-node.js",
    "lib/svgo-node.test.js",
    "lib/svgo.js",
    "lib/svgo.test.js",
    "lib/svgo/**/*.js",
    "lib/css-tools.js",
    "plugins/convertPathData.js",
    "plugins/plugins.js",
    "plugins/preset-default.js"
  ]
}
