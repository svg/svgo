    "noEmit": true,
    "module": "commonjs",
    "target": "es2018",
    "lib": ["es2018"],
    "allowJs": true,
    "checkJs": true,
    "strict": true,
    "resolveJsonModule": true,
    "noImplicitAny": true
  },
  "include": [
    "plugins/**/*",
    "lib/xast.test.js",
    "lib/path.test.js",
    "test/cli/**/*"
